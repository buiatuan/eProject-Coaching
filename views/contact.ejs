<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="css/contact.css">
    <%- include("stylesheet.ejs") %>
    <title>Contact</title>
</head>
<body>
<%- include("head.ejs") %>
<div class="container">
    <div class="img-contact">
        <img src="images/imgs_contact/bgr-banner.png"/>
    </div>
    <form>
        <button class="btn-contact" type="submit">Contact </button>
    </form>
    <div class="contact-us">
        <div class="box-1">
            <h3> Contact Us </h3>
        </div>
        <div class="box-2">
            <p> <span class="sp-box2"> Opening hours </span> </br>
                Monday to Thursday: 10am - 1pm and 2pm to 5pm </br>
                Friday: 10am - 1pm and 2pm to 4:30pm </br>
                Closed weekends </p>
        </div>
    </div>
    <div class="form">
        <form>
            <label class="form-label"> Your name<span class="text-red">*</span></label>
            <div class="form-yname">
                <div class="form-yname1">
                    <input class="form-contact-yname1" type="email" name="email" placeholder=" "required/>
                </div>
                <div class="form-yname2">
                    <input class="form-contact-yname2" type="text" name="user_name" placeholder=" "required/>
                </div>
            </div>
            <label class="form-label-ms"> Email<span class="text-red">*</span> </label>
            <div class="form-mail">
                <input class="form-contact-email" type="email" name="email" placeholder=" "required/>
            </div>
            <label class="form-label-ms"> Subject<span class="text-red">*</span> </label>
            <div class="form-sub">
                <input class="form-contact-subject" type="text" name="subject" placeholder=" "required/>
            </div>
            <label class="form-label-ctgr"> Category <span class="text-red">*</span></label>
            <div class="form-category">
                <select class="form-select-ctgr" name="select-contact">
                    <option value="Please Select"> Please select </option>
                    <option> </option>
                    <option> </option>
                    <option> </option>
                </select>
            </div>
            <label class="form-label-msg">Message<span class="text-red">*</span></label>
            <div class="form-message">
                <textarea class="form-textarea form-contact" name="description"></textarea>
            </div>
            <div>
                <button class="btn-contact-send" type="submit">Send</button>
            </div>
        </form>
    </div>
</div>
<%- include("footer.ejs") %>
<%- include("common_link_js.ejs") %>
</body>
</html>